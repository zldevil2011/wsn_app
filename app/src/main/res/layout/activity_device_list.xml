<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ll.chart.PieChart"
    android:orientation="vertical"
    android:background="@drawable/bgg">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/orange">
        <Button
            android:id="@+id/btn_ret"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:text="@string/return_btn_name"
            android:textSize="@dimen/return_btn_size"/>
    </LinearLayout>
    <com.ll.grid.StaggeredGridView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:column_count_landscape="2"
        app:column_count_portrait="3"
        app:item_margin="8dp" />

</LinearLayout>